page {
  background-color: #ccc;
  padding: 20rpx;
}
.search {
  height: 70rpx;
  display: flex;
}
.search input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  margin-right: 10rpx;
}
.search button {
  width: 110rpx;
  height: 100%;
  font-size: 28rpx !important;
  padding: 0;
  border-radius: 0;
  border: none;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_content {
  margin-top: 40rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 28rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
